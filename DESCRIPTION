Package: heritable
Title: Heritability Estimation From Mixed Models
Version: 0.0.0.9000
Authors@R: 
    c(
    person(given = "Fonti", family = "Kar", role = c("aut", "cre"), email = c("fonti.kar@anu.edu.au"), comment = c(ORCID = "0000-0002-2760-3974")),
